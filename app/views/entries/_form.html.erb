<%= form_for(@entry) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <div class="field">
    <%= f.label :tasks %><br />
    <%= f.text_area :tasks %>
  </div>
  <div class="field">
    <%= f.label :hours %><br />
    <%= f.text_area :hours %>
  </div>

  <%# Add User -- hidden (check questrial - quests) %>
  <%= f.hidden_field :user_id, :value => current_user.id %><br />
  
  <%# Add Project %>
  <%= f.label :project %>
  <%= f.select :project_id, @projects %>  
  
  <%= link_to 'Add a New Project', new_project_path %> <br /><br />
  
  <%# Add Cal_date %>
  <div class="field">
    <%= f.label 'Calendar Date' %><br />
    <%= f.date_select :cal_date %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
