<%= form_for @project do |p| %>  

	<%= render 'shared/error_messages', :object => p.object %>

	<div class="field">  
		<%= p.label :name %>  <br />
		<%= p.text_field :name %>  
	</div>  	  
	
	<%# Add User -- hidden %>
	<%= p.hidden_field :user_id, :value => current_user.id %><br />

	<div class="actions">
		<%= p.submit "Add" %>
	</div>  
<% end %>  